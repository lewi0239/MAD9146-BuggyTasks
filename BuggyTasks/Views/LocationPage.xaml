<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuggyTasks.Views.LocationPage"
             Title="Location">
    <VerticalStackLayout Padding="16" Spacing="20">
        <Label Text="Location Page" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Get Current Location" Clicked="OnGetLocationClicked" />
        <Label x:Name="locationLabel" FontSize="18" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
